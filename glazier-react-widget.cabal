name:                glazier-react-widget
version:             0.7.0.0
synopsis:            Generic widget library using glazier-react
description:         Generic widget library using glazier-react
homepage:            https://github.com/louispan/glazier-react-widget#readme
license:             BSD3
license-file:        LICENSE
author:              Louis Pan
maintainer:          louis@pan.me
copyright:           2017 Louis Pan
category:            Web, GUI
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:
                       Glazier.React.Actions
                       Glazier.React.Actions.KeyDownKey
                       Glazier.React.Commands
                       Glazier.React.Commands.FocusElement
                       Glazier.React.Commands.FocusElement.Exec
                       Glazier.React.Commands.Rerender
                       Glazier.React.Commands.Rerender.Exec
                       Glazier.React.Commands.SetProperty
                       Glazier.React.Commands.SetProperty.Exec
                       Glazier.React.Framework
                       Glazier.React.Framework.Activator
                       -- Glazier.React.Framework.Archetype
                       Glazier.React.Framework.Builder
                       Glazier.React.Framework.Display
                       Glazier.React.Framework.Handler
                       Glazier.React.Framework.Executor
                       -- Glazier.React.Framework.Prototype
                       Glazier.React.Framework.Trigger
                       Glazier.React.Framework.Widget
                       -- Glazier.React.Widgets.Input
                       -- Glazier.React.Widgets.Input.TextInput
                       -- Glazier.React.Widgets.List
                       -- Glazier.React.Widgets.List.Run
  build-depends:       base >= 4.7 && < 5
                     , bifunctors >= 5.4.2
                     , containers >= 0.5
                     , contravariant >= 1.4
                     , monadplus >= 1.4
                     , data-diverse >= 1.2.0.1
                     , data-diverse-lens >= 0.5.1.0
                     , deepseq >= 1.4
                     , dlist >= 0.8
                     , glazier-react >= 0.7
                     , javascript-extras >= 0.3.2.0
                     , lens >= 4
                     , mmorph >= 1
                     , mtl >= 2
                     , profunctors >= 5.2
                     , tagged >= 0.8.5
                     , transformers >= 0.4
  default-language:    Haskell2010
  default-extensions:  ApplicativeDo
  ghc-options:         -Wall
  if impl(ghcjs)
    build-depends: ghcjs-base
  if !impl(ghcjs)
    build-depends: ghcjs-base-stub >= 0.1.0.2

source-repository head
  type:     git
  location: https://github.com/louispan/glazier-react-widget
